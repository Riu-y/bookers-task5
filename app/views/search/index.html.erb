<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<!--メモ右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Users</h2>
			<!--users一覧 -->
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% if @model == 'user' %>
					<% @datas.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg" %></td>
							<td><%= user.name%></td>
							<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
						</tr>
					<% end %>
					<% elsif @model == 'book' %>
						<tr>
						<% @datas.each do |book| %>
							<td>
								<%= link_to (book.user) do %>
									<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
								<% end %>
							</td>
							<td><%= book.title %></td>
							<td><%= book.body %></td>
							<td></td>
						</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
			<!--users一覧 -->